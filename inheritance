class vehicle:
    def general_purpose(self):
        print("General purpose : transportation")

class car(vehicle):
    def __init__(self):
        print("I'm a car")
        self.wheels = 4
        self.doors = 4

    def specific_purpose(self):
        print("Specific purpose: personal transport")

class bike(vehicle):
    def __init__(self):
        print("I'm a bike")
        self.wheels = 2
        self.doors = 0

    def specific_purpose(self):
        print("Specific purpose: personal transport")

c1 = car()
c1.general_purpose()
c1.specific_purpose()

b1 = bike()
b1.general_purpose()
b1.specific_purpose()
#second example


class animal:
    def sound(self):
        pass
class dog(animal):
    def sound(self):
        print("I'm a dog")
        print("my name is woof woof")
class cat(animal):
    def sound(self):
        print("I'm a cat")
        print("my sound is meow meow")
class horse(animal):
    def sound(self):
        print("I'm a horse")
        print("my sound is neigh neigh")
class cat(animal):
    def sound(self):
        print("I'm a cat")
        print("my sound is meow meow")
class horse(animal):
    def sound(self):
        print("I'm a horse")
        print("my sound is neigh neigh")
class cow(animal):
    def sound(self):
        print("I'm a cow")
        print("my sound is maa maa")
d=dog()
d.sound()
h=horse()
h.sound()
c=cow()
c.sound()
#third example
class employee:
    def __init__(self,name ,salary):
        self.name=name
        self.salary=salary
        pass
class manager(employee):
    def __init__(self, name, salary):
        super().__init__(name, salary)
        self.salary=salary+50000
        print(f"Manager Name:{self.name},salary:{self.salary}")
class developer (employee):
    def __init__(self, name, salary):
        super().__init__(name, salary)
        self.salary=salary+20000
        print(f"Developer Name:{self.name},salary:{self.salary}")

class data_administrator(employee):
    def __init__(self, name, salary):
        super().__init__(name, salary)
        self.salary=salary+15000
        print(f"Data Administrator Name:{self.name},salary:{self.salary}")
e1=manager("chetan",1000000)
e2=developer("abdul",80000000)
e3=data_administrator("kallyann",5263100)
